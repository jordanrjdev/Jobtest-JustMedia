<div class="container">
  <div class="d-flex justify-content-between align-items-center">
    <h1 class="d-inline-block">Category List</h1>
    <%= link_to "Create new category", new_category_path, class:"btn btn-sm btn-primary" %>
  </div>
  <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Keywords</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <%= render @categories %>
  </tbody>
</table>
</div>