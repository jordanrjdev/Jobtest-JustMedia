<%= form_with(model: @product, local: true) do |form|   %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="form-group">
    <%= form.label :color %>
    <%= form.text_field :color %>
  </div>

  <div class="form-group">
    <%= form.label :size %>
    <%= form.text_field :size %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>

  <div class="form-group"> 
    <%= form.submit %>
  </div>
<% end %>