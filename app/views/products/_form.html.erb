
<div class="container">
<div class="row justify-content-center">
<div class="col-12 col-md-10 col-lg-4 bg-secondary p-3 rounded-3">
<%= form_with(model: @product, local: true) do |form|   %>
  <% if local_assigns[:edit] %>
    <h1 class="h3 text-white text-center">Edit Product</h1>
  <% else %>
    <h1 class="h3 text-white text-center">Create Product</h1>
  <%end%>
  
  <div class="form-group">
    <%= form.label :name, class:"text-white"%>
    <%= form.text_field :name, class:"form-control mb-2" %>
  </div>

  <div class="form-group">
    <%= form.label :color, class:"text-white" %>
    <%= form.text_field :color, class:"form-control mb-2" %>
  </div>

  <div class="form-group">
    <%= form.label :size, class:"text-white" %>
    <%= form.text_field :size, class:"form-control mb-2" %>
  </div>

  <div class="form-group">
    <%= form.label :price, class:"text-white" %>
    <%= form.text_field :price, class:"form-control mb-2" %>
  </div>

  <div class="form-group"> 
    <%= form.submit class:"mt-3 btn btn-dark d-block mx-auto"%>
  </div>
<% end %>
</div>
</div>
</div>

