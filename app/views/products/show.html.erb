<div class="container" >
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center"><%= @product.name %></h1>
    <div>
  <div class="row mt-5">
    <div class="col-md-6 d-flex justify-content-center align-items-center">
      <% if @product.image.attached? %>
        <%= image_tag url_for(@product.image), class:"img-fluid" %>
      <% else %>
 <%= image_tag url_for("https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fcdn0.iconfinder.com%2Fdata%2Ficons%2Fzillo-data-internet-vol-1%2F25%2Fpage_error_404_not_found-512.png&f=1&nofb=1"), class:"card-img-top"%>
       <% end %>

    </div>
    <div class="col-md-6 p-3 rounded-2" style="background-color:rgba(0,0,0,.2)">
      <p><span class="fw-bold">Color:</span> <%= @product.color %></p>
      <p><span class="fw-bold">Size:</span> <%= @product.size %></p>
      <p><span class="fw-bold">Price:</span> <%= @product.price %> $</p>
      <% if @product.categories.length > 0 %>
        <p class="fw-bold">Categories</p>
        <ul>
          <% @product.categories.each do |category_product| %>
            <li><p><%= category_product.name %></p></li>
          <% end %>
        </ul>
      <% else %>
      <p class="fw-bold">No hay categorias</p>
      <% end %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-12 d-flex justify-content-end">
          <%= link_to "Edit", edit_product_path(@product.id), class:"btn btn-warning" %>
      <%= link_to "Delete", @product, method: :delete, class:"ms-2 btn btn-danger" %>
    </div>
  </div>
</div>